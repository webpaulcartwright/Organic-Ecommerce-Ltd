</div>

<script type="text/javascript">
jQuery(window).on('load', function(){  
var itemcount = '';
        jQuery.ajax({
            url: '<?php echo $baseUrl; ?>/customminicart/index/returncount/',                
            async: false,
            type: 'post',
            dataType: 'text',
            success: function(result){
                    itemcount = result;                                
            }
        });        
        jQuery(".mw-cart-count").html("("+itemcount+")");
        jQuery(".mw-cart-count").show();
});
</script>